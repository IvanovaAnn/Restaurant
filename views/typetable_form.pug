extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='type') TypeTable:
      input#type.form-control(type='text', placeholder='single table, double table etc.' name='type' value=(undefined===typetable ? '' : typetable.type), required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg