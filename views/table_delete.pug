extends layout

block content
  h1 #{number}: #{table.number}
  p= table.lifespan

  if table_times.length

    p #[strong Delete the following times before attempting to delete this table.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Times

      dl
      each time in table_times
        dt
          a(href=time.url) #{time.tim_formatted}
        dd #{time.status}

  else
    p Do you really want to delete this Table?

    form(method='POST' action='')
      div.form-group
        input#tableid.form-control(type='hidden',name='tableid', required='true', value=table._id )

      button.btn.btn-primary(type='submit') Delete